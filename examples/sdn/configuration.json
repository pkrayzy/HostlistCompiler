{
  "name": "AdGuard Simplified Domain Names filter",
  "description": "Filter composed from several other filters (English filter, Social media filter, Spyware filter, Mobile ads filter, EasyList and EasyPrivacy) and simplified specifically to be better compatible with DNS-level ad blocking.",
  "homepage": "https://github.com/AdguardTeam/AdguardSDNSFilter",
  "license": "GPLv3",
  "sources":[
    {
      "name": "AdGuard DNS filter",
      "source": "https://raw.githubusercontent.com/pkrayzy/HostlistCompiler/master/optimized/15_optimized.txt",
      "type": "adblock",
      "transformations": ["Deduplicate", "Validate", "RemoveComments"]
    },
    {
      "name": "HaGeZi's Light DNS Blocklist",
      "source": "https://raw.githubusercontent.com/hagezi/dns-blocklists/main/adblock/light.txt",
      "type": "adblock",
      "transformations": ["RemoveComments", "Compress"]
    },
    {
      "name": "EasyPrivacy Admiral",
      "source": "https://raw.githubusercontent.com/easylist/easylist/master/easyprivacy/easyprivacy_trackingservers_admiral.txt",
      "type": "adblock",
      "transformations": ["Deduplicate", "Validate", "RemoveComments"]
    }, 
    {
      "name": "GetAdmiral Domains Filter List",
      "source": "https://raw.githubusercontent.com/LanikSJ/ubo-filters/refs/heads/main/filters/getadmiral-domains.txt",
      "type": "adblock",
      "transformations": ["Deduplicate", "Validate", "RemoveComments"]
    },
    {
      "name": "Additional rules",
      "source": "https://raw.githubusercontent.com/AdguardTeam/AdGuardSDNSFilter/master/Filters/rules.txt",
      "type": "adblock",
      "transformations": ["Deduplicate", "Validate", "RemoveComments"],
      "exclusions": ["||mobileanalytics.*.amazonaws.com^"]
    }
  ],
  "exclusions_sources": [
    "https://raw.githubusercontent.com/hagezi/dns-blocklists/main/adblock/blocklist-referral-native.txt",
    "https://raw.githubusercontent.com/pkrayzy/FiltersCompiler/master/filters/DNSexclusions.txt",
    "https://raw.githubusercontent.com/AdguardTeam/AdGuardSDNSFilter/master/Filters/exclusions.txt"
  ],
  "transformations": ["Deduplicate", "Validate", "RemoveComments"]
}
